{% extends 'base.html.twig' %}


{% block body %}


<!-- Tableau contenant les différents stages/entreprises/formations-->
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Intitulé</th>
      <th scope="col">Entreprise</th>
      <th scope="col">Formation</th>
    </tr>
  </thead>
  <tbody>
    {% for stageCourant in stages %}
    <tr>

      <td><a href = "{{path('proStages_stages', {id:stageCourant.id})}}" style="color:white; text-decoration:none;">
        {{stageCourant.titre}}</a></td>
        <td>
        <a href = "{{path('proStages_stages_entreprise', {nom:stageCourant.entreprise.getNom})}}" style="color:white; text-decoration:none;">
          {{stageCourant.entreprise.getNom}}</a>
        </td>
        <td>
          {% for formationCourante in stageCourant.formations %}
          {{formationCourante.nomCourt}}
          <td> <a class="nav-link" href="{{path('proStages_modifStage',{'id':stageCourant.id})}}">Modifier</a></td>

          {% endfor %}
        </td>


      </tr>
      {% endfor %}
    </tbody>
  </table>



{% endblock %}
